---
import * as prismicH from '@prismicio/helpers';
import { Debug } from 'astro/components';

const {name, subtitle} = Astro.props;

const renderedName = prismicH.asText(name);
---
<!-- <Debug {renderedName} /> -->
<div class="relative overflow-hidden rounded-lg shadow-lg cursor-pointer w-1/3 gap-x-5 flex flex-1 justify-end">
	<img class="object-cover w-full h-52" src="https://images.unsplash.com/photo-1502581827181-9cf3c3ee0106?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=420&q=80" alt="Flower and sky"/>

	<div class="absolute bottom-0 left-0 px-4 py-4">
	    <h4 set:html={renderedName} class="text-xl font-semibold tracking-tight text-white"></h4>
	    <p class="leading-normal text-gray-100 text-xs">{subtitle}</p>
    </div> 
</div>